# English Learning App - Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=english_learning_db
DB_USER=postgres
DB_PASSWORD=1234
DB_SSL=false

# JWT Configuration
JWT_SECRET=EmBeMeN07+
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_key_here_also_very_long_and_random

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp3,wav

# Email Configuration (for password reset - optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=English Learning App <noreply@englishlearning.com>

# External API Keys (for future features)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Cache Configuration (Redis - optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3000

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@englishlearning.com
ADMIN_PASSWORD=Admin123456

# Wordle Game Configuration
WORDLE_MAX_ATTEMPTS=6
WORDLE_WORD_LENGTH=5

# Quiz Configuration
DEFAULT_QUIZ_QUESTIONS=10
MAX_QUIZ_QUESTIONS=50

# Spaced Repetition Configuration
SPACED_REPETITION_INTERVALS=1,3,7,14,30,90
DEFAULT_DIFFICULTY_RATING=3

# Development/Debug Configuration
DEBUG=true
VERBOSE_LOGGING=true
ENABLE_SWAGGER=true
